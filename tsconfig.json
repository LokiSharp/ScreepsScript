{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["esnext"],
    "target": "es2017",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "./",
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./test/*"],
      "@mock/*": ["./test/unit/mock/*"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "rollup.config.ts", "jest.config.ts"],
  "exclude": ["node_modules"]
}
